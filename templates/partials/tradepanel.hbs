<!-- user trading panel -->
<div class="trading-panel">
    <!-- user Trading paneles HEADING container- "Trading Panel" -->
    <div class="panel-head">
        <h4>Trading panel</h4>
        <!-- icon for FULLSCREEN and MINIMISE SCREEN -->
        <p>x</p>
    </div>

    <!-- UI-PANEL- ACTIVE TRADES of a user -->
    <div class="active-trade">
        <!-- active trade HEADING=> "Active Trade" -->
        <p id="active-trade-head">Active Trade</p>
        
    {{!-- // --- tradepanel.hbs --- --}}
    <div class="trade-win-loss-ui">
    <h1 id="win-loss" style="display: block;">Place bet</h1>
    <p id="no-bet-message" style="display: block;">There is not currently any bet</p>
    <div id="loading-icon" style="display: none;"><p></p></div>
    <h1 id="final-result" style="display: none; font-size: 24px; color: black;">Result will appear here</h1>
    </div>
        
        <table class="result-table">
          <!--TABLE'S all HEADINGS for user trade history -->
             <tr id="table-head">
                <th class="trade-table-heading">No.</th>
                <th class="trade-table-heading">ID</th>
                <th class="trade-table-heading">Trade</th>
                <th class="trade-table-heading">Ammount</th>
                <th class="trade-table-heading">Result</th>
                <th class="trade-table-heading">Win/Loss</th>
            </tr>

            <!-- TABLE's DATA of All historical trades  -->
            <tbody id="active-bets-tbody">
           {{#each bet}}
            <tr class="profit">
                <td class="result-data-table">{{incrementedIndex @index}}</td>
                <td class="result-data-table">{{this.gameId}}</td>
                <td class="result-data-table">{{this.betNumber}}</td>
                <td class="result-data-table">{{this.betAmount}} ₹</td>
                <td class="result-data-table">{{this.result}}</td>
                <td class="result-data-table">{{winOrLoss this.winAmount this.lossAmount}}</td>
            </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
    
</div>

<!-- container for Store DATA of users TRADE History -->
    <div class="trad-history">

        <!-- HEADING for trade history of a user=> "Your Trade History" -->
        <div class="history-header">
        <p id="active-trade-head2">Your Trade History</p>
            <button id="refresh-history" title="Refresh History">
                <i class="fas fa-sync-alt"></i> Refresh
            </button>
        </div>

        <!-- TABLE that store DATA of users All TRADES  -->
        <table class="result-table2">
        <tr id="table-head2">
        <th class="trade-table-heading">No.</th>
        <th class="trade-table-heading">ID</th>
        <th class="trade-table-heading">Trade</th>
        <th class="trade-table-heading">Ammount</th>
        <th class="trade-table-heading">Result</th>
        <th class="trade-table-heading">Win/Loss</th>
        </tr>
        <tbody id="trade-history-tbody">
        {{#each user.history}}
        <tr class="profit {{rowClass this.winAmount this.lossAmount}}">
        <td class="result-data-table">{{incrementedIndex @index}}</td>
        <td class="result-data-table">{{this.gameId}}</td>
        <td class="result-data-table">{{this.betNumber}}</td>
        <td class="result-data-table">{{this.betAmount}} ₹</td>
        <td class="result-data-table">{{this.result}}</td>
        <td class="result-data-table">{{winOrLoss this.winAmount this.lossAmount}}</td>
        </tr>
         {{/each}}
        </tbody>
        </table>
        
        <!-- Pagination controls for trade history -->
        <div class="trade-history-pagination">
            <button id="prevHistoryPage" class="pagination-btn" disabled>&lt; Previous</button>
            <div id="historyPageNumbers" class="page-numbers"></div>
            <button id="nextHistoryPage" class="pagination-btn">Next &gt;</button>
        </div>
    </div>

