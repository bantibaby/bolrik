<!-- Account Container -->
<div class="account-container">
    <div class="user-profile">
        <div class="user-info">
            <div class="welcome-text">Welcome,</div>
            <div class="user-name">{{user.fullname}}</div>
        </div>
        
        <div class="user-actions">
            <a href="/" class="action-btn home-btn">
                <i class="fas fa-home"></i>
                Home
            </a>
            <a href="/user/logout" class="action-btn logout-btn">
                <i class="fas fa-sign-out-alt"></i>
                Logout
            </a>
        </div>
    </div>

    <!-- Referral Section -->
    <div class="referral-section">
        <div class="referral-link-container">
            <div class="referral-title">Your Referral Link</div>
            <div class="link-wrapper">
                <input type="text" id="refLink" value="{{#if user.referralCode}}https://bolrik.in/user/register?ref={{user.referralCode}}{{else}}No Referral Code Available{{/if}}" readonly>
                <button id="copyRefLink" class="copy-btn">
                    <i class="fas fa-copy"></i>
                </button>
            </div>
            <div id="copyMessage" class="copy-message">Link Copied!</div>
        </div>

        <div class="referral-stats">
            <div class="stat-card">
                <div class="stat-title">Total Referrals</div>
                <div class="stat-value" id="totalReferred">0</div>
            </div>
            <div class="stat-card">
                <div class="stat-title">Total Earnings</div>
                <div class="stat-value" id="referralEarnings">0 <span class="currency">â‚¹</span></div>
            </div>
        </div>

    </div>
</div>

<!-- Standalone Referral Users Section -->
<div class="standalone-referral-users" id="referralUsersSection">
            <div class="section-title">Referred Users List</div>
            <div id="referralUsersLoading" class="loading-container">
                <div class="loading-spinner"></div>
            </div>
            <div id="noReferralsMsg" class="no-referrals-msg">
                No referrals yet. Share your referral code with friends!
            </div>
            <div class="referral-table-container" id="referralTableContainer">
                <table class="referral-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                    <th>Deposit</th>
                    <th>Bonus</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="referralUsersList">
                <!-- Data will be loaded here via JavaScript -->
                    </tbody>
                </table>
    </div>
</div>
<!-- Bank and UPI Container -->
<div class="bank-upi-container">
    <!-- Bank Details Section -->
    <div id="bank-section">
        <div class="bankHead">
            <h3>Bank Details</h3>
        </div>
        {{#if user.banking.bankName}}
            <div class="form-group">
                <label>Full Name</label>
                <input type="text" id="fullname" value="{{user.fullname}}" disabled>
            </div>
            <div class="form-group">
                <label>Bank Name <span class="edit-icon" onclick="enableEdit('bankName')">edit</span></label>
                <input type="text" id="bankName" value="{{user.banking.bankName}}" disabled>
            </div>
            <div class="form-group">
                <label>Account Number <span class="edit-icon" onclick="enableEdit('accountNumber')">edit</span></label>
                <input type="text" id="accountNumber" value="{{user.banking.accountNumber}}" disabled>
            </div>
            <div class="form-group">
                <label>IFSC Code <span class="edit-icon" onclick="enableEdit('ifsc')">edit</span></label>
                <input type="text" id="ifsc" value="{{user.banking.ifsc}}" disabled>
            </div>
            <button id="updateBankBtn" disabled onclick="updateBankDetails()">Update</button>
        {{else}}
            <button onclick="showBankForm()">Add Bank</button>
            <div id="bankForm" style="display: none;">
                <div class="form-group">
                    <label>Full Name</label>
                    <input type="text" id="newFullname" value="{{user.fullname}}" disabled>
                </div>
                <div class="form-group">
                    <label>Bank Name</label>
                    <input type="text" id="newBankName">
                </div>
                <div class="form-group">
                    <label>Account Number</label>
                    <input type="text" id="newAccountNumber">
                </div>
                <div class="form-group">
                    <label>IFSC Code</label>
                    <input type="text" id="newIfsc">
                </div>
                <button onclick="saveBankDetails()">Save Bank</button>
            </div>
        {{/if}}
    </div>

    <!-- UPI Details Section -->
    <div id="upi-section">
        <div class="bankHead">
            <h3>UPI Details</h3>
        </div>
        {{#if user.banking.upiId}}
            <p><b>UPI ID:</b> <span id="upiId">{{user.banking.upiId}}</span> <span class="edit-icon" onclick="enableUpiEdit()">edit</span></p>
            <input type="text" id="editUpiId" value="{{user.banking.upiId}}" style="display: none;">
            <button id="updateUpiBtn" disabled onclick="updateUpiDetails()">Update</button>
        {{else}}
            <button onclick="showUpiForm()">Add UPI ID</button>
            <div id="upiForm" style="display: none;">
                <div class="form-group">
                    <label>UPI ID</label>
                    <input type="text" id="newUpiId">
                </div>
                <button onclick="saveUpiDetails()">Save UPI</button>
            </div>
        {{/if}}
    </div>
    
    <!-- Paytm Details Section -->
    <div id="paytm-section">
        <div class="bankHead">
            <h3>Paytm Details</h3>
        </div>
        {{#if user.banking.paytmNumber}}
            <p><b>Paytm Number:</b> <span id="paytmNumber">{{user.banking.paytmNumber}}</span> <span class="edit-icon" onclick="enablePaytmEdit()">edit</span></p>
            <input type="text" id="editPaytmNumber" value="{{user.banking.paytmNumber}}" style="display: none;">
            <button id="updatePaytmBtn" disabled onclick="updatePaytmDetails()">Update</button>
        {{else}}
            <button onclick="showPaytmForm()">Add Paytm Number</button>
            <div id="paytmForm" style="display: none;">
                <div class="form-group">
                    <label>Paytm Number</label>
                    <input type="text" id="newPaytmNumber">
                </div>
                <button onclick="savePaytmDetails()">Save Paytm</button>
            </div>
        {{/if}}
    </div>
</div>

<!-- Payment Method History Section -->
<div class="payment-history-container">
    <div class="bankHead">
        <h3>Payment Method History</h3>
    </div>
    <div class="payment-history-list">
        {{#if user.banking.paymentMethodHistory}}
            {{#each user.banking.paymentMethodHistory}}
                <div class="payment-history-item">
                    <div class="payment-history-type">{{this.type}}</div>
                    <div class="payment-history-details">
                        {{#if (eq this.type "bank")}}
                            Bank: {{this.details.bankName}}, A/C: {{this.details.accountNumber}}, IFSC: {{this.details.ifsc}}
                        {{else if (eq this.type "upi")}}
                            UPI ID: {{this.details.upiId}}
                        {{else if (eq this.type "paytm")}}
                            Paytm: {{this.details.paytmNumber}}
                        {{/if}}
                    </div>
                    <div class="payment-history-date">{{formatDate this.updatedAt}}</div>
                </div>
            {{/each}}
        {{else}}
            <div class="no-history">No payment method history found</div>
        {{/if}}
    </div>
</div>



