            <a id="deposit-btn" class="user-button" href="/user/login">Deposit</a>
            <a id="withdraw-btn" class="user-button" href="/user/login">Withdraw</a>
        </div>
    </div>

    <div id="user-links">
        <a id="rules" class="links-user" href="#">Rules</a>
        <a id="history-btn" class="links-user" href="/user/login">History</a>
        <a id="ref-btn" class="links-user" href="/user/login">ref.link</a>
        <a id="user-register" class="links-user" href="/user/register">Register</a>
        <a id="user-login" class="links-user" href="/user/login">Login</a>
