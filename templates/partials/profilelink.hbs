        <div id="user-balance"> 
            <a id="user-name" class="links-users">Balance</a>
            <a id="left-balances" class="Left-balance links-users">
                {{user.balance.pending}} &#8377;
            </a>
        </div>

        <div id="user-btn">
            <a id="deposit-btn" class="user-button" href="/user/deposit">Deposit</a>
            <a id="withdraw-btn" class="user-button" href="/user/withdraw">Withdraw</a>
        </div>
    </div>

    <div id="user-links">
        <a id="rules" class="links-user" href="#">Rules</a>
        <a id="history-btn" class="links-user" href="/history">History</a>
        <a id="ref-btn" class="links-user" href="#">ref.link</a>
