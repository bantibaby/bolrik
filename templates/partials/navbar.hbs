        <div class="dblinks">
            <p class="welcome-text">Let's Begin</p>
        </div>
        <div class="navsitelinks">
            <a class="user-top-links" href="/" id="home-link">Home</a>
            <a class="user-top-links" href="/user/login" id="login-link">Login</a>
            <a class="user-top-links register-btn" href="/user/register" id="register-link">Register</a>
        </div>
        {{/if}}
    </div>
</nav>
