<!-- Responsive Navigation Bar -->
<nav class="navBar">
    <!-- Logo -->
    <div class="topNavBar">
        <img class="logo-top" src="/src/LOGO BIG croped.png" alt="Bolrin">
        {{!-- <p class="logo-top">LOGO</p> --}}
    </div>

    <!-- Mobile Menu Toggle Button -->
    <div class="menu-toggle" id="menu-toggle">
        <i class="fas fa-bars"></i>
