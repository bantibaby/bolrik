    <!-- Main Navigation Links -->
    <div class="main-links" id="nav-links">
        <!-- Close Button for Mobile Menu -->
        <span class="close-menu" id="close-menu">&times;</span>

        {{#if user}}
        <div class="dblinks">
            <p class="welcome-text">Welcome, {{user.fullname}}! <span><i class="fas fa-wallet"></i></span> </p>
