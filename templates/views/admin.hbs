            </tr>
            {{#each users}}
            <tr class="user-row" data-role="{{this.role}}">
                <td>{{this.fullname}}</td>
                <td>{{this.mobile}}</td>
                <td>{{this.role}}</td>
                <td>{{this.referredBy}}</td>
                <td>{{this.referredUsers}}</td>

                
            </tr>
            {{/each}}
        </table>
    </section>

    <!-- ✅ Deposit Requests -->
    <section class="adminTables">
        <h3>User Deposit Requests</h3>
        <table>
            <tr class="adminTr">
                <th>User</th>
                <th>Amount</th>
                <th>Bonus</th>
                <th>Transaction ID</th>
                <th>Screenshot</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
            {{#each deposits}}
                {{#if (eq this.status "Pending")}}
                <tr>
                    <td>{{this.userId}}</td>
                    <td>₹{{this.amount}}</td>
                    <td>₹{{this.bonus}}</td>
                    <td>{{this.transactionId}}</td>
                    <td>
                        {{#if this.screenshot}}
                            <a href="/uploads/{{this.screenshot}}" target="_blank">View</a>
                        {{else}}
                            No Screenshot
                        {{/if}}
                    </td>
                    <td>{{this.status}}</td>
                    <td>
                        <a href="/admin/approve-deposit/{{this._id}}" class="approve-btn">Approve</a>
                        <a href="/admin/reject-deposit/{{this._id}}" class="reject-btn">Reject</a>
                    </td>
