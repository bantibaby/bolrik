            text-align: center;
            padding: 20px;
        }

        /* Card & Container Styles */
        .card {
            background-color: #1E1E1E;  /* Dark Gray */
            border: 1px solid #2F2F2F;  /* Muted Gray */
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            width: 50%;
            margin: auto;
            margin-bottom: 20px;
        }

        /* Buttons */
        .btn {
            display: inline-block;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            margin: 5px;
            border: none;
        }

        .btn-primary {
            background-color: #FFCC00;  /* Gold */
            color: #121212;  /* Dark Background */
        }

        .btn-primary:hover {
            background-color: #FFD633;  /* Lighter Gold */
        }

        /* Danger (Losing Bets) */
        .btn-danger {
            background-color: #FF3B30;  /* Red */
            color: white;
        }

        .btn-danger:hover {
            background-color: #FF6155;
        }

        /* Success (Winning Bets) */
        .btn-success {
            background-color: #33CC66;  /* Bright Green */
            color: white;
        }

        .btn-success:hover {
            background-color: #45D679;
        }

        /* Info (Active Status, Highlights) */
        .highlight {
            color: #00A3FF;  /* Neon Blue */
            font-weight: bold;
        }

        /* Bet Result Box */
        .result-box {
            background-color: #252525;
            color: #FFFFFF;
